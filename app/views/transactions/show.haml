= render 'shared/logout'
= render 'shared/error_message'

%h1 Transactions:
= link_to "Add new", new_transaction_path
%table
  %tr
    %th= sortable 'amount', 'Amount'
    %th= sortable 'purpose', 'Purpose'
    %th= sortable 'category_id', 'Category'
    %th= sortable 'account_id', 'Account'
    %th= sortable 'created_at', 'When'
  -if @transactions.any?
    - @transactions.each do |transaction|
      %tr
        %td= transaction.amount
        %td= transaction.purpose
        %td= transaction.category.name
        %td= transaction.account.name
        %td= transaction.created_at
  -else
    No transaction for this account
